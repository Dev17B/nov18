 <!-- note taker add -->
<%- include ../partials/header.ejs %>  <!-- This line calling header.ejs -->
<%- include ../partials/main_nav.ejs %> <!-- This line calling Partials.ejs -->
<!-- Content for the add page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-15">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="notenameTextField"> Note Title </label>
                    <input type="text" class="form-control"
                    id="notenameTextField"
                    placeholder="Enter the Title of note"
                    name="notename" required>
                </div>

                <div class="form-group">
                    <label for="dateTextField"> Date </label>
                    <input type="text" class="form-control"
                    id="dateTextField"
                    placeholder="Enter the Date"
                    name="date" >
                </div>

                <div class="form-group">
                    <label for="descTextField"> Description </label>
                    <textarea type="text" class="form-control"
                    id="descTextField"
                    placeholder="Any the description"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="additionalnoteTextField"> Additional Note </label>
                    <textarea type="text" class="form-control"
                    id="additionalnoteTextField"
                    placeholder="Any additional notes"
                    name="additionalnote"></textarea>
                </div>

                <br>
                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit the notes
                </button>

                <a href="/note-taker" class="btn-btn-warning">
                    <i class="fas fa-undo"></i> Cancel and Go back 
                </a>
            </form>

            
        </div>    
    </div>
</div>